site_name: {{ project_title }}
nav:
  - Home: index.md
  - Installation: installation.md
  {%- if create_jupyter_notebook_directory|lower == "y" %}
  - Examples: [] # this will be filled in automatically to include reference to all the notebooks
  {%- endif %}
  - Contributing: contributing.md
  - Changelog: CHANGELOG.md
  {%- if command_line_interface|lower == "y" %}
  - Reference:
    - Command line interface: api/cli.md
  {%- else %}
  - Reference: []
  {%- endif %}
theme:
  name: material
  custom_dir: docs/overrides
  features:
    - navigation.indexes
    - navigation.top
    - content.code.copy
repo_url: https://github.com/{{ repository_owner }}/{{ repository_name }}/
site_dir: .docs
markdown_extensions:
  - admonition
  - attr_list
  {%- if command_line_interface|lower == "y" %}
  - mkdocs-click
  {%- endif %}
  - pymdownx.emoji:
      emoji_index: !!python/name:material.extensions.emoji.twemoji
      emoji_generator: !!python/name:material.extensions.emoji.to_svg
  - pymdownx.highlight:
      anchor_linenums: true
      line_spans: __span
      pygments_lang_class: true
  - pymdownx.inlinehilite:
      style_plain_text: shell
  - pymdownx.superfences
  - pymdownx.snippets
  - pymdownx.tabbed:
      alternate_style: true
  - toc:
      permalink: "#"
      toc_depth: 3
hooks:
  - docs/static/hooks.py
plugins:
  - search
  - autorefs
{%- if create_jupyter_notebook_directory|lower == "y" %}
  - mkdocs-jupyter:
      include: ["examples/*.ipynb"]
      allow_errors: false
      kernel_name: {{ repository_name }}
      include_source: True
      execute: false
{%- endif %}
  - mkdocstrings:
      default_handler: python
      handlers:
        python:
          options:
            docstring_section_style: spacy
            show_bases: true
            filters:
              - "!^_"
            merge_init_into_class: true
            show_if_no_docstring: true
            signature_crossrefs: true
            show_root_toc_entry: false
            show_signature_annotations: false
          paths: [src]
          import:
            - https://docs.python.org/3/objects.inv
watch:
  - src/{{ module_name }}
extra_css:
  - static/extras.css
extra:
  version:
    provider: mike
